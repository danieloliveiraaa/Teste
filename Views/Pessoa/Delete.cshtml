@model Pessoa

@{
    ViewData["Title"] = "Delete";
}

<div class="text-center">
    <h1 class="display-4">Confirma a exclusão de @Model.NomeCompleto?</h1>
</div>
<br />

<form asp-controller="Pessoa" asp-action="Edit" method="post">

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="nome" class="form-label">Nome:</label>
        <input type="text" asp-for="NomeCompleto" class="form-control" placeholder="Digite o nome" disabled>
        @Html.ValidationMessageFor(x => x.NomeCompleto, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="nascimento" class="form-label">Data de Nascimento:</label>
        <input type="date" asp-for="DataNascimento" class="form-control" placeholder="Digite a data de nascimento" disabled>
        @Html.ValidationMessageFor(x => x.DataNascimento, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="renda" class="form-label">Renda:</label>
        <input type="text" asp-for="RendaValor" class="form-control" placeholder="Digite a renda" disabled>
        @Html.ValidationMessageFor(x => x.RendaValor, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="cpf" class="form-label">CPF:</label>
        <input type="text" asp-for="CPF" id="cpf" class="form-control" placeholder="Digite o CPF" disabled>
        @Html.ValidationMessageFor(x => x.CPF, "", new { @class = "text-danger" })
    </div>
</form>

<br />

<a class="btn btn-danger btn-block" href="@Url.Action("Apagar", "Pessoa", new { Model.Id })">Confirmar Exclusão</a>
<a class="btn btn-secondary btn-block" href="@Url.Action("Index", "Pessoa")">Cancelar Exclusão</a>
